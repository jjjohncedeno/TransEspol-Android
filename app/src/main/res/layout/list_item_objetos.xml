<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:background="#f0f0f0"
    android:paddingBottom="2dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="2dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/post_border_style"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/post_border_background"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/imgObjeto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_menu_slideshow"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="Nombre"
                android:textAppearance="?attr/textAppearanceListItem"
                tools:text="Alexander Pierrot" />

            <TextView
                android:id="@+id/txtTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtNombre"
                android:layout_below="@+id/txtNombre"
                android:text="Cargo"
                android:maxLines="4"
                tools:text="Encontrado por." />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>